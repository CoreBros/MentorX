<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="My first blog">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="site_desc" size="30" value="Blog Description">
				<head>{{site_desc}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="sy_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_realname" size="30" value="Administrator">
				<head>{{real_name}}</head>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en">English</option>
					<option value="de">German</option>
					<option value="da">Danish</option>
					<option value="es">Spanish</option>
					<option value="fr">French</option>
					<option value="fi">Finnish</option>
					<option value="cs">Czech</option>
					<option value="sk">Slovak</option>
					<option value="nl">Dutch</option>
					<option value="is">Icelandic</option>
					<option value="tr">Turkish</option>
					<option value="se">Swedish</option>
					<option value="pt">Portuguese Brazilian</option>
					<option value="pt_PT">Portuguese European</option>
					<option value="bg">Bulgarian</option>
					<option value="hu">Hungarian</option>
					<option value="no">Norwegian</option>
					<option value="pl">Polish</option>
					<option value="ro">Romanian</option>
					<option value="it">Italian</option>
					<option value="ru">Russian</option>
					<option value="fa">Persian</option>
					<option value="tn">Traditional Chinese</option>
					<option value="cn">Simplified Chinese</option>
					<option value="ja">Japanese</option>
					<option value="ko">Korean</option>
					<option value="sa">Arabic</option>
					<option value="ta">Tamil</option>
				</select>
				<head>{{select_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
</softinstall>
<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="Open eShop">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="dbprefix" size="20" value="oe_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__admin_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en_US">English</option>
					<option value="es_ES">Spanish</option>
				</select>
				<head>{{select_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install.lock</exclude>
	</files>
</softinstall>
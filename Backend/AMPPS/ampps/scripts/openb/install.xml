<softinstall xmlns="http://www.softaculous.com">
	<settings>
		<group>
			<heading>{{site_set}}</heading>
			<input type="text" name="site_name" size="30" value="My Pubvana">
				<head>{{site_name}}</head>
			</input>
			<input type="text" name="site_desc" size="30" value="Blogging and Small business CMS">
				<head>{{site_desc}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="pv_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
			<input type="text" name="admin_pass" size="30" value="Password1!">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_fname" size="30" value="System">
				<head>{{f_name}}</head>
			</input>
			<input type="text" name="admin_lname" size="30" value="Administrator">
				<head>{{l_name}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<files>
		<exclude>installer/*</exclude>
		<exclude>installer/*/*</exclude>
		<exclude>installer/*/*/*</exclude>
		<exclude>installer/*/*/*/*</exclude>
		<exclude>installer/*/*/*/*/*</exclude>
	</files>
</softinstall>
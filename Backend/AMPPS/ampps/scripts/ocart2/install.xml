<softinstall xmlns="http://www.softaculous.com">
	<settings>		
		<group>
			<heading>{{store_set}}</heading>
			<input type="text" name="store_name" size="30" value="Your Store">
				<head>{{store_name}}</head>
			</input>
			<input type="text" name="store_desc" size="30" value="Your store of fun">
				<head>{{store_desc}}</head>
			</input>
			<input type="text" name="store_owner" size="30" value="Owner">
				<head>{{store_owner}}</head>
			</input>
			<input type="textarea">
				<textarea name="store_address" cols="30" rows="5">Store Name
Address
Country
Phone</textarea>
				<head>{{store_address}}</head>
			</input>
		</group>
		<group>
			<heading>{{db_set}}</heading>
			<input type="text" name="dbprefix" size="30" value="oc_">
				<head>{{db_pre}}</head>
				<optional>true</optional>
			</input>
		</group>
		<group>
			<heading>{{ad_act}}</heading>
			<input type="text" name="admin_username" size="30" value="admin">
				<head>{{ad_name}}</head>
			</input>
			<input type="text" name="admin_pass" size="30" value="pass">
				<head>{{ad_pass}}</head>
				<handle>__ad_pass</handle>
			</input>
			<input type="text" name="admin_email" size="30" value="admin" softmail="true">
				<head>{{ad_email}}</head>
				<handle>__email_address</handle>
			</input>
			<input type="text" name="admin_fname" size="30" value="System">
				<head>{{f_name}}</head>
			</input>
			<input type="text" name="admin_lname" size="30" value="Administrator">
				<head>{{l_name}}</head>
			</input>
		</group>
		<group>
			<heading>{{ad_lang}}</heading>
			<input type="select">
				<select name="language">
					<option value="en-gb">English</option>
					<option value="ru-ru">Russian</option>
				</select>
				<head>{{select_adm_lang}}</head>
			</input>
		</group>
	</settings>
	<db>mysql</db>
	<datadir>ocartdata</datadir>
	<files>
		<exclude>install/*</exclude>
		<exclude>install/*/*</exclude>
		<exclude>install/*/*/*</exclude>
		<exclude>install/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*</exclude>
		<exclude>install/*/*/*/*/*/*</exclude>
	</files>
</softinstall>